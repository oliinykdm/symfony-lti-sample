    {% extends 'base.html.twig' %}

    {% block title %}Add new Course{% endblock %}

    {% block body %}

        <script>
            $( document ).ready(function() {
                $('#enable-deep-linking').on('click', function(e) {
                    $('#deep-linking-field').toggleClass("d-none");
                });
                $('#enable-dynamic-registration').on('click', function(e) {
                    $('#dynamic_add_form').toggleClass("d-none");
                    $('#manual_add_form').toggleClass("d-none");
                });
            });
        </script>
        <h2 class="pb-2 border-bottom">Add new Course</h2>

        <form method="POST">
            <div class="mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="enable_dynamic_registration" value="1" id="enable-dynamic-registration">
                    <label class="form-check-label" for="enable-dynamic-registration">
                        Use Dynamic Registration
                    </label>
                </div>
            </div>
            <div id="dynamic_add_form" class="d-none">
                <div class="mb-3">
                    <label for="dynamic-registration-url" class="form-label">Dynamic Registration URL</label>
                    <input type="url" class="form-control" name="dynamic_registration_url" id="dynamic-registration-url">
                </div>
            </div>

            <div id="manual_add_form">
            <div class="mb-3">
                <label for="tool-url" class="form-label">Course/Tool Name</label>
                <input type="text" class="form-control" name="tool_name" id="tool-name">
            </div>
            <div class="mb-3">
                <label for="tool-url" class="form-label">Tool URL</label>
                <input type="url" class="form-control" name="tool_url" id="tool-url">
            </div>
            <div class="mb-3">
                <label for="initiate-login-url" class="form-label">Initiate login URL</label>
                <input type="url" class="form-control" name="initiate_login_url" id="initiate-login-url">
            </div>
            <div class="mb-3">
                <label for="jwks-url" class="form-label">JWKS URL</label>
                <input type="url" class="form-control" name="jwks_url" id="jwks-url">
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="enable-deep-linking">
                    <label class="form-check-label" for="enable-deep-linking">
                        Enable DeepLinking
                    </label>
                </div>
            </div>

            <div class="mb-3 d-none" id="deep-linking-field">
                <label for="deep-linking-url" class="form-label">Deep linking URL</label>
                <input type="url" class="form-control" name="deep_linking_url" id="deep-linking-url">
            </div>
            </div>
            <button type="submit" class="btn btn-primary">Add Course</button>
        </form>


    {% endblock %}
